{
    "imports": [
        {"path": "designs/joints/finger_joint_plug.json"},
        {"path": "designs/joints/finger_joint_socket.json"},
        {"path": "designs/box/lid.json"}
    ],
    "params": {
        "offset": ".0035",
        "material_width": 17,
        "material_height": 10,
        "material_thickness": 0.2,
        "box_width": 2.5,
        "box_height": 2.75,
        "box_depth": 1.5,
        "handle_hole": 0.3, 
        "handle_depth": 0.6,
        "stem_topper_svg": "M 425.474 705.105 L 345.318 705.105 C 330.065 705.105 317.682 692.721 317.682 677.468 L 317.682 622.196 C 317.682 606.943 330.065 594.559 345.318 594.559 C 383.050 626.859 417.826 640.878 450.386 641.197 C 482.947 640.878 517.723 626.859 555.455 594.559 C 570.708 594.559 583.091 606.943 583.091 622.196 L 583.091 677.468 C 583.091 692.721 570.708 705.105 555.455 705.105 L 475.298 705.105",
        "finger_width": 0.3,
        "finger_height": "material_thickness",
        "finger_space": 0.2,
        "finger_depth": "material_thickness",
        "finger_padding" : "(finger_space + finger_width) / 2"
    },
    "parts": [
        {
            "type" : "group",
            "id" : "side",
            "repeat": {
                "total": 2
            },
            "components" : [
                {
                    "type": "draw",
                    "id": "bridge_hole",
                    "transforms" : [
                        {
                            "type": "offset",
                            "distance" : "offset",
                            "size_should_be" : "smaller"
                        },
                        {
                            "type": "move",
                            "to": {
                                "x" : "box_depth / 2",
                                "y" : "finger_space"
                            },
                            "handle": "$TOP_MIDDLE"
                        }
                    ],
                    "commands": [
                        {
                            "command": "rectangle",
                            "width": "material_thickness",
                            "height": "finger_width"
                        }
                    ]
                },
                {
                    "id" : "side",
                    "type": "group",
                    "params" : {
                        "width": "box_depth",
                        "height": "box_height"
                    },
                    "transforms": [
                        {
                            "type": "join",
                            "close_path" : "true"
                        },
                        {
                            "type": "offset",
                            "distance" : "offset",
                            "size_should_be" : "larger"
                        }
                    ],
                    "components": [
                        {
                            "type" : "draw",
                            "commands" : [
                                {
                                    "command" : "move",
                                    "to" : {"x": "0", "y": "0"}
                                },
                                {
                                    "command" : "line",
                                    "to" : "width,0"
                                }
                            ]
                        },
                        {
                            "type" : "draw",
                            "commands" : [
                                
                                {
                                    "command" : "line",
                                    "to" : "width,height"
                                }
                            ]
                        },
                        {
                            "type": "finger_joint_plug",
                            "from" : "width,height",
                            "to" : "0,height"
                        },
                        {
                            "type" : "draw",
                            "commands" : [
                                {
                                    "command" : "line",
                                    "to" : "0,0"
                                }
                            ]
                        }
                    ]
                }
            ]
        },

        {
            "id" : "bottom",
            "type": "group",
            "params" : {
                "front_width": "box_width",
                "side_width": "box_depth"
            },
            "transforms": [
                {
                    "type": "join",
                    "close_path" : "true"
                },
                {
                    "type": "offset",
                    "distance" : "offset",
                    "size_should_be" : "larger"
                }
            ],
            "components": [
                {
                    "type": "finger_joint_socket",
                    "from": "0,0",
                    "to" : "side_width,0"
                },
                {
                    "type" : "draw",
                    "commands" : [
                        {
                            "command" : "line",
                            "to" : "side_width,front_width"
                        }
                    ]
                },
                {
                    "type": "finger_joint_socket",
                    "from" : "side_width,front_width",
                    "to" : "0,front_width"
                },
                {
                    "type" : "draw",
                    "commands" : [
                        {
                            "command" : "line",
                            "to" : "0,0"
                        }
                    ]
                }
            ]

        },
        {
            "components": [{
                "type": "lid_underside",
                "front_width": "box_width",
                "side_width": "box_depth" 
            }]
        },
        {

            "id" : "lid_top",
            "components": [{
                "type": "lid_top",
                "front_width": "box_width",
                "side_width": "box_depth" 
            }]
        },
        {
            "id" : "lid_handle",
            "params" : {
                "width": "box_width - (2 * material_thickness)" 
            },
           
            "components": [
                {
                    "type": "draw",
                    "transforms" : [
                        // TODO: this causes a bug
                        // {
                        //     "type": "offset",
                        //     "distance" : "offset",
                        //     "size_should_be" : "larger"
                        // }
                    ],
                    "commands": [
                        {
                            "command" : "line",
                            "to": "(width / 2) - (handle_hole / 2), 0"
                        },
                        {
                            "command": "rel_line",
                            "to": "0, 0 - ((material_thickness * 2) + .3)"
                        },
                        {
                            "command": "rel_line",
                            "to": "handle_hole, 0"
                        },
                        {
                            "command": "rel_line",
                            "to": "0, ((material_thickness * 2) + .3)"
                        },
                        // hole
                        { 
                            "command": "rel_move",
                            "to": "0 - handle_hole + .075, 0 - ((material_thickness * 2) + .2)"
                        },
                        {
                            "command": "circle",
                            "radius": ".08"
                        },
                        {
                            "command": "move",
                            "to": "(width / 2) + (handle_hole / 2), 0"
                        },
                        // done with hole
                        { 
                            "command": "line",
                            "to": "width, 0"
                        }, // done with top
                        // start finger
                        {
                            "command": "rel_line",
                            "to": "0,finger_space"
                        },
                        {
                            "command": "rel_line",
                            "to": "material_thickness, 0"
                        },
                        {
                            "command": "rel_line",
                            "to": "0, finger_width"
                        },
                        {
                            "command": "rel_line",
                            "to": "0 - material_thickness, 0"
                        },
                        // end finger
                        {
                            "command": "line",
                            "to": "width,handle_depth"
                        },
                        {
                            "command": "svg_scale_to",
                            "svg" : "M2008.19,1966.6C1694.15,1776.92 1340.45,1778.27 947.931,1966.6",
                            "to": "0, handle_depth" // TODO: this could be a curve
                        },
                        {
                            "command": "line",
                            "to": "0,finger_space + finger_width"
                        },
                        // start finger
                        {
                            "command": "rel_line",
                            "to": "0 - material_thickness, 0"
                        },
                        {
                            "command": "rel_line",
                            "to": "0, 0 - finger_width"
                        },
                        {
                            "command" : "rel_line",
                            "to": "material_thickness, 0"
                        },
                        {
                            "command": "line",
                            "to": "0,0"
                        }
                    ]
                }
            ]
        }
    ]
}
