// A divided box with 2 compartments
// |-------|
// |       |
// |-------|
// |       |
// |-------|
{
    "imports": [
        {"path": "designs/box/front_flat_top.json"},
        {"path": "designs/box/bottom.json"},
        {"path": "designs/box/side_flat_top.json"},
        {"path": "designs/joints/finger_joint_holes.json"},
        {"path": "designs/joints/line.json"}
    ],
    "params": {
        "offset": ".0035",
        "material_width": 18,
        "material_height": 11,
        "material_thickness": 0.25,
        "box_width": 9,
        "box_height": 11.5,
        "box_depth": 12,
        "finger_width": 0.2,
        "finger_height": "material_thickness",
        "finger_space": 0.2,
        "finger_depth": "material_thickness",
        "finger_padding" : "(finger_space + finger_width) / 2",
        "divider_1_position": 6
    },
    "parts": [
        {
            "id": "front_flat_top",
            "repeat": {
                "total": 3
            },
            "components" : [{
                "type": "front_flat_top",
                "width": "box_width",
                "height": "box_height"
            }]
        },
        {
            "id": "side_flat_top",
            "repeat": {
                "total": 2
            },
            "part_transformers": [
                {
                    "type": "splitter",
                    "auto_split": true,
                    "bleed_top": "offset",
                    "bleed_bottom": "offset",
                    "plug_edge": {
                        "id": "plug_edge",
                        "type": "line"
                    },
                    "socket_edge": {
                        "type": "line"
                    }
                }
            ],
            "components" : [
                {
                    "type": "side_flat_top",
                    "width": "box_depth",
                    "height": "box_height"
                },
                {
                    "type": "finger_joint_holes",
                    "from": "divider_1_position, 0",
                    "to": "divider_1_position, box_height",
                    "padding_left": "finger_padding",
                    "padding_right": "finger_padding + material_thickness"
                }
            ]
        },
        {
            "id": "bottom",
            "components" : [
                {
                    "type": "box_bottom",
                    "front_width": "box_width",
                    "side_width": "box_depth"
                },
                {
                    "type": "finger_joint_holes",
                    "from": "0, divider_1_position", 
                    "to": "box_width, divider_1_position"
                }
            ]
        }
    ]
}
