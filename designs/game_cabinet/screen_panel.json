{
    "imports": [
        {"path": "designs/joints/finger_joint_plug.json"},
        {"path": "designs/joints/finger_joint_socket.json"},
        {"path": "designs/joints/line.json"},
        {"path": "designs/common/rectangle.json"}
    ],
    "params": {
        "offset": ".0035",
        "material_width": 20,
        "material_height": 12,
        "material_thickness": 0.2,
        "finger_width": 0.3,
        "finger_height": 0.2,
        "finger_space": 0.2,
        "finger_depth": "material_thickness",
        "width": 10,
        "height": 10,
        "screen_width": 5,
        "screen_height": 6
    },
    "parts": [
        {
            "custom_component" : {
                "type": "cabinet_screen_panel"
            },
            // local variables so we avoid collisions
            "l_width" : "width",
            "l_height" : "height",
            "components": [
                {
                    "type": "group",
                    "id": "screen_outline",
                    "transforms": [
                        {
                            "type": "join",
                            "close_path" : "true"
                        },
                        {
                            "type": "offset",
                            "distance" : "offset",
                            "size_should_be" : "larger"
                        }
                    ],
                    "components": [
                        {
                            "id": "joint_with_marquee_inset",
                            "type" : "line",
                            "from" : "0,0",
                            "to" : "width,0"
                        },
                        {
                            "type": "finger_joint_plug",
                            "from": "width,0",
                            "to" : "width,height"
                        },
                        {
                            "id": "joint_with_joystick_panel",
                            "type": "line",
                            "from" : "width,height",
                            "to" : "0,height"
                        },
                        {
                            "type": "finger_joint_plug",
                            "from": "0,height",
                            "to" : "0,0"
                        }
                    ]
                },
                {
                    "type": "rectangle",
                    "id": "screen_cutout",
                    "transforms": [
                        {
                            "type": "move",
                            "to": "(l_width - screen_width) / 2, (l_height - screen_height) / 2",
                            "handle": "$TOP_LEFT"
                        }
                    ],
                    "width": "screen_width",
                    "height": "screen_height"
                }
            ]
        }
    ]
}
